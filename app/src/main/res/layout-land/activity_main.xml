<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="3"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"


        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/plusButton"
            style="@style/operationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:onClick="handleArithmeticButtonClick"
            android:text="@string/plus"
            android:textSize="30sp"


        />





        <Button
            android:id="@+id/minusButton"
            style="@style/operationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/plusButton"
            android:layout_weight="1.0"
            android:onClick="handleArithmeticButtonClick"
            android:text="@string/minus"
            android:textSize="30sp"

            />


        <Button
            android:id="@+id/multiplyButton"
            style="@style/operationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:onClick="handleArithmeticButtonClick"
            android:text="@string/multiply"
            android:textSize="30sp"
        />

        <Button
            android:id="@+id/devideButton"
            style="@style/operationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:onClick="handleArithmeticButtonClick"
            android:text="@string/devide"
            android:textSize="30sp"

        />

        <Button
            android:id="@+id/equalButton"
            style="@style/operationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:onClick="handleEqualsButtonClicked"
            android:text="@string/equal"
            android:textSize="30sp"

        />

    </LinearLayout>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        android:columnCount="3"
        android:rowCount="4"
        >

            <Button
                android:id="@+id/oneButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleNumericButtonClick"
                android:text="@string/one"
                android:textSize="30sp"

                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"


                />

            <Button
                android:id="@+id/twoButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleNumericButtonClick"
                android:text="@string/two"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                />

            <Button
                android:id="@+id/threeButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleNumericButtonClick"
                android:text="@string/three"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                />

            <Button
                android:id="@+id/fourButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleNumericButtonClick"
                android:text="@string/four"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                />

            <Button
                android:id="@+id/fiveButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleNumericButtonClick"
                android:text="@string/five"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                />

            <Button
                android:id="@+id/sixButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleNumericButtonClick"
                android:text="@string/six"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                />

            <Button
                android:id="@+id/sevenButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleNumericButtonClick"
                android:text="@string/seven"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                />

            <Button
                android:id="@+id/eightButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleNumericButtonClick"
                android:text="@string/eight"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                />

            <Button
                android:id="@+id/nineButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleNumericButtonClick"
                android:text="@string/nine"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                />

            <Button
                android:id="@+id/dotButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleNumericButtonClick"
                android:text="@string/dot"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                />

            <Button
                android:id="@+id/zerroButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="handleNumericButtonClick"
                android:text="@string/zero"
                android:textSize="30sp"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"


                />

            <Button
                android:id="@+id/clearButton"
                style="@style/numberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="24dip"
                android:onClick="handleClearButtonClicked"
                android:text="@string/clear"
                android:layout_gravity="fill"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                />


    </GridLayout>





















    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>
